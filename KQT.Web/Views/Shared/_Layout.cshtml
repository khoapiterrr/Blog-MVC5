<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800'
          rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet'
          type='text/css'>
    <link href="~/Content/css/clean-blog.min.css" rel="stylesheet" />
</head>
<body>
    @Html.Partial("_HeaderPartial")
    @RenderSection("_PageHeader", required: false)
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                @RenderBody()
            </div>
        </div>
    </div>
    <hr>
    @Html.Partial("_FooterPartial")
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/clean-blog.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>